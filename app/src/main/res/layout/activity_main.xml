<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/system_image_water">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/webview_page_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="H5页面加载"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>


        <Button
            android:id="@+id/webview_tag_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="服务器H5页面调用安卓原生功能"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>

        <Button
            android:id="@+id/native_webview_tag_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="本地H5页面调用安卓原生功能"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>

    </LinearLayout>


</RelativeLayout>